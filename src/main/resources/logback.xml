<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder charset="UTF-8">
			<pattern>%d %level %thread %logger %msg%n</pattern>
		</encoder>
	</appender>
	
	<root level="WARN">
		<appender-ref ref="STDOUT" />
	</root>

	<logger name="com.zhihuishu.data" level="INFO" />
	<logger name="com.zhihuishu.data.MainBootApplication" level="INFO" additivity="false">
		<appender-ref ref="STDOUT" />
	</logger>

</configuration>